<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bashapulluru.onlinelibrarymanagement.Activity3"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_tv"
        android:text="Admin Login"
        android:textSize="30dp"
        android:layout_marginStart="81dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="81dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_text"
        android:text="User_Name :"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/admin_pass"
        android:text="Password   :"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/pass_et"
        app:layout_constraintRight_toRightOf="@+id/admin_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/admin_text"
        app:layout_constraintTop_toTopOf="@+id/pass_et" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:id="@+id/username_et"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pass_et"
        app:layout_constraintRight_toRightOf="@+id/pass_et"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/admin_tv"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/pass_et" />
    <EditText
        android:layout_width="204dp"
        android:layout_height="32dp"
        android:id="@+id/pass_et"
        android:layout_marginStart="13dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/admin_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/admin_pass"
        android:layout_marginLeft="13dp" />
    <Button
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="ok"
        android:id="@+id/ok_btn"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="86dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/pass_et"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="86dp" />
    <Button
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="clear"
        android:id="@+id/clear_btn"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="40dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/username_et"
        app:layout_constraintBaseline_toBaselineOf="@+id/ok_btn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/ok_btn"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="40dp" />

</android.support.constraint.ConstraintLayout>
