<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bashapulluru.onlinelibrarymanagement.Activity4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Login"
        android:textSize="30dp"
        android:id="@+id/emp_login_txt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emp_username_txt"
        android:text="UserName:"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="36dp"
        android:layout_marginTop="102dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="36dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emp_pass_txt"
        android:text="Password:"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/emp_pass_et"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/emp_username_txt"
        android:layout_marginRight="19dp" />
    <EditText
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:id="@+id/emp_name_et"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emp_pass_txt"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/emp_login_txt"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toRightOf="@+id/emp_username_txt"
        android:layout_marginLeft="17dp" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:id="@+id/emp_pass_et"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emp_pass_txt"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/emp_name_et"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/emp_pass_txt"
        app:layout_constraintLeft_toRightOf="@+id/emp_username_txt"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="2dp" />

</android.support.constraint.ConstraintLayout>
