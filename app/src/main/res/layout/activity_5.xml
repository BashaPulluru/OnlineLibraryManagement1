<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bashapulluru.onlinelibrarymanagement.Activity5">
    <Button
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:id="@+id/addbook_btn"
        android:text="Add book"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/update_book_btn"
        app:layout_constraintRight_toRightOf="@+id/update_book_btn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/update_book_btn" />
    <Button
        android:layout_width="123dp"
        android:layout_height="63dp"
        android:id="@+id/update_book_btn"
        android:text="Update book details"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/remove_book_btn"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:id="@+id/remove_book_btn"
        android:text="Remove book"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/update_book_btn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="159dp"
        app:layout_constraintLeft_toLeftOf="@+id/update_book_btn" />

</android.support.constraint.ConstraintLayout>
